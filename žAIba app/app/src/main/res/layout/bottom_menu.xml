<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/bottomMenu"
    android:layout_width="800dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/light_green_cards"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="8dp"
    android:layout_margin="0dp"
    android:elevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton
            android:id="@+id/menu_bar_button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/home_icon_menu_bar"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/menu_bar_button_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/info"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/info_icon_menu_bar"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/menu_bar_button_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/settings_icon_menu_bar"
            android:scaleType="center" />
    </LinearLayout>
