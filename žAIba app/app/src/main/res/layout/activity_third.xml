<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView to make the content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Back Button and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back_button_desc"
                    android:padding="8dp"
                    android:src="@drawable/back_btn" />

                <TextView
                    android:id="@+id/location_smallTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/explore"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/fake_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:visibility="invisible"
                    android:src="@drawable/back_btn" />

            </LinearLayout>

            <!-- Articles Section Title -->
            <TextView
                android:id="@+id/articles_explore_naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/archivo_extrabold"
                android:text="@string/articles_home_naslov"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <!-- Articles Horizontal RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/articlesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="32dp"
                android:scrollbars="horizontal"
                android:clipToPadding="false"/>

            <!-- Saved Section Title -->
            <TextView
                android:id="@+id/saved_explore_naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/archivo_extrabold"
                android:text="@string/saved"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/nothing_saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/archivo_extrabold"
                android:text="@string/nothing_saved"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="11sp"/>

            <!-- Saved RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:paddingHorizontal="16dp"
                android:scrollbars="vertical"/>

            <!-- Frogs Section Title -->
            <TextView
                android:id="@+id/frogs_explore_naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/archivo_extrabold"
                android:text="@string/frogs"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <!-- Frogs RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="32dp"
                android:scrollbars="vertical"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Menu (Fixed at the bottom) -->
    <include layout="@layout/bottom_menu"/>
</RelativeLayout>